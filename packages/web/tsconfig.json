{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "lib": ["ESNext", "DOM"],
    "paths": {
      "@shared/*": [
        "../shared/src/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "*.js",
    "**/*.js",
    "**/*.json",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
